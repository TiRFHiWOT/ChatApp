{
  "name": "chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && npm run fix-prisma-binary && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "ws:dev": "tsx watch server/websocket-server.ts",
    "fix-prisma-binary": "cp node_modules/.prisma/client/libquery_engine-debian-openssl-3.0.x.so.node node_modules/.prisma/client/libquery_engine-debian-openssl-1.1.x.so.node 2>/dev/null || true",
    "postinstall": "npm run fix-prisma-binary"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "emoji-picker-react": "^4.16.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.555.0",
    "next": "14.2.5",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "prisma": "^5.19.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
